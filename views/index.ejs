  <body>

      <nav>
        <div class='logo-menu'>

        <a href="/"><img id="logoimage" src="https://toppng.com/public/uploads/preview/company-name-logo-11551052030ob9tu5iwdn.png" alt="logo" class="logo" /></a>
          <div class="dropdown">
            <button class="dropbtn">Products</button>
            <div class="dropdown-content">
              <a class = "category-select" data-category="Laptop">Laptops</a>
              <a class = "category-select" data-category="Monitor">Monitors</a>
              <a class = "category-select" data-category="Phone">Phones</a>
