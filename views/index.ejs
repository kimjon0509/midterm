              <a class = "category-select" data-category="Accessories">Accessories</a>

            </div>
          </div>
          <button id="create" class="new-listing_button">Create Listing</button>
          <button id="create" class="register-button">Register</button>
        </div>
        <form class="search-bar">
          <input type="text" class="search-input" placeholder="Search.." />
          <input type="submit" value="search" style="display:none;"></input>
        </form>

        <ul class="user-bar">
          <li id="heart"><i class="favourites-button far fa-heart"></i></li>
          <li id="chat"><i class="message-button far fa-comment-alt"></i></li>
          <% if (!user) {%>
          <form id="myID" method="post" action="/login">
            <li><input id="em" type="text" name="email" placeholder="Email"/></li>
            <li><input id="pword" type="password" name="password" placeholder="Password"/></li>
            <li><input id="login" type="submit" name="login" value="Login" /></li>
          <%} else{ %>
            <form class="form-inline" action="/logout" method="POST" style="min-width: 350px; flex-wrap: nowrap;">
              <span> Logged in as: <%=user_info.name%> </span>
              <button type="submit" class="btn btn-outline-dark">Logout</button>
            </form>
          <% } %>
          </ul>
        </form>
